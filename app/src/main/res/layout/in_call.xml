<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/in_call_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/in_call_photo_group"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/union"
            android:id="@+id/in_call_photo"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:alpha="0.7"


            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#56000000"
    android:layout_gravity="bottom"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joan"
        android:textSize="50sp"
        android:textColor="#fff"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:id="@+id/in_call_name"
        android:padding="5dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:00"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:id="@+id/in_call_time"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        />
</RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"

        android:id="@+id/in_call_hang_up"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/in_call_hang_up_button"
            android:src="@drawable/ic_call_end_black_48dp"
            android:background="@color/hang_up_red"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/in_call_options"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/in_call_options_hold"
            android:src="@drawable/ic_pause_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/in_call_options_mute"
            android:src="@drawable/ic_mic_off_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/in_call_options_dial"
            android:src="@drawable/ic_dialpad_black_48dp"
            style="?android:attr/borderlessButtonStyle"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/in_call_options_speaker"
            android:src="@drawable/ic_volume_up_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            />




    </LinearLayout>
</LinearLayout>
